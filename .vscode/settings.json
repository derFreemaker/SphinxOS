{
    "Lua.workspace.useGitIgnore": false,
	"Lua.workspace.ignoreSubmodules": false,
	"Lua.workspace.maxPreload": 10000,
	"Lua.workspace.preloadFileSize": 2000,
    "Lua.workspace.ignoreDir": [
        "**/.git",
		"**/.github",
		"**/.vscode",
        "**/docu/tools",
        "**/Sim-Files",
        "**/Freemaker/src",
		"**/Code-Server"
    ],
    "Lua.diagnostics.disable": [
		"different-requires"
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"Code-Server": true
	},
    "logFileHighlighter.customPatterns": [
		{
			"pattern": ".*\\[Log\\] ->.*",
			"foreground": "#1fffcb",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Trace\\]:.*",
			"foreground": "#969595",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Debug\\]:.*",
			"foreground": "#f8a632",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Info\\]:.*",
			"foreground": "#195eff",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Warning\\]:.*",
			"foreground": "#ffe921",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Error\\]:.*",
			"foreground": "#ff0000",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": ".*\\[Fatal\\]:.*",
			"foreground": "#c400b7",
			"letterSpacing": "1.2px"
		},
		{
			"pattern": "\\[TASK START\\]",
			"foreground": "#0da00d"
		}
	],
	"Lua.diagnostics.globals": [
		"NotInGame"
	],
}
